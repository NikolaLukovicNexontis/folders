<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m"
	xmlns:smartField="sap.ui.comp.smartfield" xmlns:u="sap.ui.unified"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog title="Upload File" class="sapUiResponsivePadding--header sapUiResponsivePadding--footer" initialFocus="close" contentWidth="30%">
		<content>
			<l:Grid defaultSpan="L12 M12 S12">
				<u:FileUploader id="BulkImportUploader" name="myFileUpload" icon="sap-icon://attachment" iconOnly="false" buttonOnly="false"
					fileType="xls,xlsx" uploadUrl="/DAR_AR_BULKIMPORT/v2/bulk-import/FileImporter" tooltip="Upload your file to server" useMultipart="false"
					change="onBulkImportUploadChange" uploadOnChange="false" typeMissmatch="onBulkImportTypeMissmatch" fileSizeExceed="FileSizeLimitValidation"
					uploadComplete="onBulkImportUploadComplete" style="Emphasized" placeholder="Choose a file for Upload..."></u:FileUploader>
			</l:Grid>
		</content>
		<beginButton>
			<Button text="Close" press="closeFileUploadDialog"/>
		</beginButton>
		<endButton>
			<Button text="Upload" type="Accept" icon="sap-icon://accept" press="onPressUploadBtn"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>